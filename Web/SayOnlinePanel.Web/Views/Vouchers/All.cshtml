@using SayOnlinePanel.Common
@model SayOnlinePanel.Web.ViewModels.Vouchers.AllVouchersViewModel
<p>&nbsp;</p>
<h3 class="text-muted">Награди</h3>
<p>&nbsp;</p>

<div class="row">
    @foreach (var v in Model.Vouchers)
    {
        <div class="card col-md-3" style="margin: 20px 70px 20px 20px">
            <a asp-controller="Vouchers" asp-action="ById" asp-route-id="@v.Id">
                <img src="@v.Image" class="card-img-top" alt="@v.Name">            <rect width="100%" height="100%" fill="#868e96"></rect>
            </a>
            <div class="card-body">
                <h5 class="card-text">@v.Name</h5>
                <h8 class="text-secondary">@v.Points Точки </h8>
            </div>
        </div>
    }
</div>

<p>&nbsp;</p>
<p>&nbsp;</p>





