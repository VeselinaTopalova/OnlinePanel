@using SayOnlinePanel.Common
@model SayOnlinePanel.Web.ViewModels.Users.SyrveysListViewModel
<div class="block-content">
    <h3 class="text-info">Актуални анкети за Вас:</h3>
    <p class="text-info">
        По-долу ще откриете всички налични за Вас анкети в момента. Ще се радваме, ако участвате в тях и съберете съответните точки за всяка.
    </p>
</div>
<hr />

@if (Model.Surveys.Count() > 0)
{
    <table class="table table-hover">
        <thead>
            <tr class="table-info">
                @*<th scope="col">Дата</th>*@
                <th scope="col">Участие в анкета</th>
                <th scope="col">Точки</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sv in Model.Surveys)
            {
                <tr>
                    @*<td>@sv.Date</td>*@
                    <td><a asp-action="CompleteSurvey" asp-route-id="@sv.Id" class="text-muted">@sv.Name</a></td>
                    <td>@sv.Points</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
<p class="text-info">Няма намерени налични анкети.</p>
}

<hr />


