    <div>
        <label asp-for="QuestionType"></label>
        <input asp-for="QuestionType" class="form-control"></input>
        <span asp-validation-for="QuestionType" class="text-danger"></span>
    </div>


    <div id="QuestionsContainer">
        <div id="QuestionsContainer">
            <label asp-for="Answers"></label>
            <a id="addQ" class="btn btn-success">Add Answers</a>
            <div id="Q"></div>
        </div>
    </div>

    <input type="submit" class="btn btn-primary" />
</form>

@section Scripts {
    <script>
            let btnQ = document.querySelector("#addQ");
            let divQ = document.querySelector("#Q");
            btnQ.addEventListener("click", AddQuestion);
            let questionIndex = 0;
            function AddQuestion() {
                let p = createHTMLElement("p", `${questionIndex + 1}`);
                let nameQ = createHTMLElement("textarea", null, null, [{ k: "placeholder", v: "Question description" }]);
                nameQ.name = `Answers[${questionIndex}].Name`;                            
                questionIndex++;
            }

            function createHTMLElement(tagName, textContent, className, attributes, event) {
                let elm = document.createElement(tagName);
                if (className) {
                    elm.classList.add(className);
                }
                if (textContent) {
                    elm.textContent = textContent;
                }
                if (attributes) {
                    attributes.forEach((a) => elm.setAttribute(a.k, a.v));
                }
                if (event) {
                    elm.addEventListener(event.name, event.func)
                }
                return elm;
            }
    </script>
}