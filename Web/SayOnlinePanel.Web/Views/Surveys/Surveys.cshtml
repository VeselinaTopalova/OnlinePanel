@using SayOnlinePanel.Common
@model SayOnlinePanel.Web.ViewModels.Surveys.SyrveysListViewModel
@{
    this.ViewData["Title"] = "All Surveys, page " + Model.PageNumber;
}

<h3>@this.ViewData["Title"]</h3>
<hr />

<div class="list-group">
    @foreach (var sv in Model.Surveys)
    {
        <div class="list-group-item list-group-item-action flex-column align-items-start active"><h5 class="mb-1">@sv.Name</h5></div>
        <div style="margin-top: 10px">
            <a asp-action="ById" asp-route-id="@sv.Id" class="btn btn-outline-primary">View</a>
            <a asp-controller="Statictics" asp-action="SampleComplete" asp-route-id="@sv.Id" class="btn btn-outline-secondary">Complete Sample</a>
            <a asp-controller="Statictics" asp-action="ByIdStatistics" asp-route-id="@sv.Id" class="btn btn-outline-info">Charts</a>
        </div>
        <div class="d-flex w-100 justify-content-between">
            <small style="margin-top: 10px">Start: @sv.StartDate.Date.ToString("d")   /   End: @sv.EndDate.Date.ToString("d")</small>
            <p>&nbsp;</p>
        </div>
        <p>&nbsp;</p>
    }
</div>
<partial name="_PagingPartial" model="@Model" />
<p>&nbsp;</p>


